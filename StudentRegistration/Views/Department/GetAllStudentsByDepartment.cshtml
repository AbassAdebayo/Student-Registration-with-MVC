<body>
<div class="container">
    @if (Model.Any())
    {
        <h2>Students in @Model.First().DepartmentName Department</h2>
        
        @foreach (var student in Model)
        {
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading">
                            Student's Information
                        </header>

                        <table class="table table-striped table-advance table-hover">
                            <thead>
                            <tr>
                                <th><i class="icon_profile"></i> Fullname</th>
                                <th><i class="icon_profile"></i> Email</th> 
                                <th><i class="icon_profile"></i> Matric Number</th>
                                <th><i class="icon_profile"></i> Department</th>
                                <th><i class="icon_calendar"></i> Enrollment Date</th>
                                <th><i class="icon_cogs"></i> Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>@student.FullName</td>
                                <td>@student.Email</td>
                                <td>@student.MatricNumber</td>
                                <td>@student.DepartmentName</td>
                                <td>@student.DateOfCreation.ToShortDateString()</td>
                                <td>
                                    <div class="btn-group">
                                        <div class="btn-group">
                                            <a class="btn btn-primary" asp-action="EditStudent" asp-route-id="@student.Id"><i class="icon_plus_alt2"></i></a>
                                            <a class="btn btn-success" asp-action="GetStudent" asp-route-id="@student.Id"><i class="icon_check_alt2"></i> View Student</a>
                                            <a class="btn btn-danger" asp-action="DeleteStudent" asp-route-id="@student.Id"><i class="icon_close_alt2"></i></a>
                                        </div>

                                    </div>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        }
            
    }
    else
    {
    <h2>@ViewBag.Message</h2>
    }
</div>

<!-- container section end -->
<!-- javascripts -->
<script src="assets1/js/jquery.js"></script>
<script src="assets1/js/bootstrap.min.js"></script>
<!-- nicescroll -->
<script src="assets1/js/jquery.scrollTo.min.js"></script>
<script src="assets1/js/jquery.nicescroll.js" type="text/javascript"></script>
<!--custome script for all page-->
<script src="assets1/js/scripts.js"></script>
</body>
</html>

