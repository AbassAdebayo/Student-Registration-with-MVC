@model StudentRegistration.DTOs.CreateDepartmentRequestModel

@{
Layout = "_Layout";
ViewData["Title"] = "Create Department";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" /> *@
    @* <link rel="stylesheet" href="css/student_register_login.css"> *@

</head>
<body>
<div class="wrapper rounded bg-white">

    <div class="h3">Student Registration Form</div>
    <form asp-action="AddDepartment" asp-controller="Department" method="post">
        <div class="form">
            <div class="row">
                <div class="col-md-6 mt-md-0 mt-3">
                    <label asp-for="DepartmentName" >Department Name</label>
                    <input asp-for="DepartmentName" type="text" class="form-control" required placeholder="Enter department's name" />
                </div>
                <div class="col-md-6 mt-md-0 mt-3">
                    <label asp-for="DepartmentCode">Department Code</label>
                    <input asp-for="DepartmentCode" type="text" class="form-control" required placeholder="Enter department's code" />
                </div>
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>

@* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script> *@
@* <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script> *@
</body>
</html>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


