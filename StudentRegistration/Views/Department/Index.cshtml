<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-table"></i> Departments</h3>
    </div>
</div>


<body>
@if (!Model.Any())
{
    <p>No departments found!</p>
}
else
{
    foreach (var department in Model)
    {
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Department: @department.DepartmentName
                    </header>

                    <table class="table table-striped table-advance table-hover">
                        <thead>
                        <tr>
                            <th><i class="icon_profile"></i> Department Name</th>
                            <th><i class="icon_profile"></i> Department Code</th>
                            <th><i class="icon_profile"></i> Student Count</th>
                            <th><i class="icon_calendar"></i> Date Created</th>
                            <th><i class="icon_cogs"></i> Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>@department.DepartmentName</td>
                            <td>@department.DepartmentCode</td>
                            <td>@department.StudentCount</td>
                            <td>@department.DateOfCreation</td>
                            <td>
                                <div class="btn-group">
                                    <div class="btn-group">
                                        <a class="btn btn-primary" asp-action="EditDepartment" asp-route-id="@department.Id"><i class="icon_plus_alt2"></i></a>
                                        <a class="btn btn-success" asp-controller="Student" asp-action="GetAllStudentsByDepartment" asp-route-id="@department.Id"><i class="icon_check_alt2"></i> View Students</a>
                                        <a class="btn btn-danger" asp-action="DeleteDepartment" asp-route-id="@department.Id"><i class="icon_close_alt2"></i></a>
                                    </div>

                                </div>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
    }
}

<!-- container section end -->
<!-- javascripts -->
<script src="assets1/js/jquery.js"></script>
<script src="assets1/js/bootstrap.min.js"></script>
<!-- nicescroll -->
<script src="assets1/js/jquery.scrollTo.min.js"></script>
<script src="assets1/js/jquery.nicescroll.js" type="text/javascript"></script>
<!--custome script for all page-->
<script src="assets1/js/scripts.js"></script>

</body>
</html>

<a asp-controller="Department" asp-action="AddDepartment" class="btn btn-primary" style="background-color: midnightblue; color: white;">Add New Department</a>
<a asp-controller="Home" asp-action="Index" class="btn btn-primary" style="background-color: midnightblue; color: white;">Return to Home Page</a>

